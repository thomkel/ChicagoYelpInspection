<h1>Listing businesses</h1>
<%= form_tag "/businesses/search", :method => 'post' do %>

  <div class="field">
    <%= label_tag :location %><br>
    <%= text_field_tag :location %>
  </div>
  <div class="actions">
    <%= submit_tag :submit %>
  </div>

<% end %>

<%= @location %>

<table>
  <thead>
    <tr>
      <th>Dba name</th>
      <th>Aka name</th>
      <th>License</th>
      <th>Facility type</th>
      <th>Address</th>
      <th>Zip</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.dba_name %></td>
        <td><%= business.aka_name %></td>
        <td><%= business.license %></td>
        <td><%= business.facility_type %></td>
        <td><%= business.address %></td>
        <td><%= business.zip %></td>
        <td><%= business.latitude %></td>
        <td><%= business.longitude %></td>
        <td><%= link_to 'Show', business %></td>
        <td><%= link_to 'Edit', edit_business_path(business) %></td>
        <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Business', new_business_path %>
